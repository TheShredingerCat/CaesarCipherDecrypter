<Window x:Class="CaesarCipherDecoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Caesar Cipher Decoder" Height="350" Width="525">
    <Grid>
        <Label Content="Enter Text to Decrypt:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textToDecryptTextBox" HorizontalAlignment="Left" Height="23" Margin="10,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="500"/>
        <Label Content="Decryption Key (0-25):" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="decryptionKeyTextBox" HorizontalAlignment="Left" Height="23" Margin="10,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <Label Content="Decrypted Text:" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="decryptedTextBox" HorizontalAlignment="Left" Height="175" Margin="10,155,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="500"/>
        <Button x:Name="decryptButton" Content="Decrypt" HorizontalAlignment="Left" Margin="219,280,0,0" VerticalAlignment="Top" Width="75" Click="decryptButton_Click"/>
    </Grid>
</Window>